// See https://zed.dev/docs/configuring-zed.
{
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "vim_mode": true,
  "ui_font_size": 13,
  "buffer_font_family": "FiraCode Nerd Font", // MesloLGL Nerd Font",
  "buffer_font_size": 12,
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light Hard",
    "dark": "Gruvbox Dark Hard"
  },
  "cursor_blink": false,
  "scrollbar": { "show": "never" }
}
