#!/bin/bash -e
# Related to https://scalesec.com/blog/why-your-yubikey-wont-work-with-aws-cli/

copy-to-clipboard() {
  if [[ "$(uname)" = 'Darwin' ]]; then
      pbcopy
  else
      xclip -sel clip
  fi
}

ykman oath accounts code "$(ykman oath accounts list)" \
  | awk '{ num = $2 } END { printf("%s\n", num) }' \
  | copy-to-clipboard
