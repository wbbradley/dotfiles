#!/bin/bash
echo "Building ctags... [PWD=$PWD]"
tmpfile="$(mktemp)"
trap 'echo Deleting temp file '"$tmpfile"'; rm '"$tmpfile" EXIT

ctags \
  -R \
  -f "$tmpfile" \
  --exclude=.mypy_cache \
  --exclude=build \
  --exclude=assets \
  --exclude=env \
  --exclude=src/gl.rs \
  --exclude=.venv \
  --exclude=node_modules \
  --exclude=target \
  --exclude=docs \
  --exclude=examples \
  --langdef=move \
  --langmap=move:.move \
  '--regex-move=/^[[:space:]]*(public(\([^)]*\))?[[:space:]]+)?fun[[:space:]]+([a-zA-Z_][a-zA-Z0-9_]*)/\3/f,function/' \
  .

echo "Removing unnecessary tags..."
#
# shellcheck disable=SC2016
grep -Ev \
  -e '^"' \
  -e '^\$ref' \
  -e '\.json\>' \
  -e '\.yaml\>' \
  -e '\.patch\>' \
  -e '\.css\>' \
  -e '\.md\>' \
  -e '\.toml\>' \
  -e '^main\tbuild.rs\t' \
  -e '\/\^[ ]*impl\>' \
  < "$tmpfile" \
  >"$tmpfile".tags

mv "$tmpfile".tags tags
echo "Tags are complete."
