#!/bin/bash
echo "Building ctags... [PWD=$PWD]"
ctags \
  -R \
  --exclude=.mypy_cache \
  --exclude=build \
  --exclude=assets \
  --exclude=target \
  --exclude=docs \
  --exclude=examples \
  .
mv tags tags.temp
trap 'rm tags.temp' EXIT
echo "Removing unnecessary tags..."
#
# shellcheck disable=SC2016
grep -Ev \
  -e '^"' \
  -e '^\$ref' \
  -e '\.json\>' \
  -e '\.yaml\>' \
  -e '\.patch\>' \
  -e '\.css\>' \
  -e '\.md\>' \
  -e '\.toml\>' \
  -e '^main\tbuild.rs\t' \
  -e '\/\^[ ]*impl\>' \
  <tags.temp \
  >tags

echo "Tags are complete."
